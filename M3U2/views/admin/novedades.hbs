<div class='container' style=' margin: 50px auto'>
  <div class='row'>
    <div class='col'>
      <p class='mt-5 text-center'>Hola, {{persona}}</p>
      <div class='d-flex justify-content-center text-center'>
        <a href='./login/logout' class='btn btn-danger'>Cerrar sesión
          <i class='fas fa-sign-out-alt'></i></a>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-7'>
      <h3>Listado de novedades</h3>
    </div>
    <div class='col-2 text-right'>
      <a href='/admin/novedades/agregar' class='btn btn-success'><i
          class='fa fa-plus'
        ></i>
        Nuevo</a>
    </div>
  </div>
  <div class='row'>
    <div class='col'>
      <table class='table'>
        <thead class='thead-dark'>
          <tr>
            <th scope='col'>#</th>
            <th scope='col'>Título</th>
            <th scope='col'>Imagen</th>
            <th scope='col'>Acciones</th>

          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
            <tr>
              <th scope='row'>{{id}}</th>
              <td>{{titulo}}</td>
              <td>{{imagen}}</td>
              <td class='text-center'>

                <a
                  href='/admin/novedades/eliminar/{{id}}'
                  title='Eliminar'
                  class='btn btn-sm btn-secondary'
                >
                  <i class='fa fa-trash'></i>
                  Eliminar
                </a>
                <a
                  href='/admin/novedades/modificar/{{id}}'
                  class='btn btn-sm btn-secondary'
                ><i class='fa fa-pencil'></i>Modificar</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>